[general]
status_path = ~/.vdirsyncer/status/

# CARDDAV
[pair contacts]
a = contacts_local
b = contacts_fastmail
collections = ["Default"]
conflict_resolution = b wins

[storage contacts_local]
type = filesystem
path = ~/.contacts
fileext = .vcf

[storage contacts_fastmail]
type = carddav
url = https://carddav.messagingengine.com/
username = danh@dnguyen.io
password.fetch = ["command", "~/.dotfiles/mutt/scripts/offlineimap.py"] 

